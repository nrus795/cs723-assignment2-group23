module cruiseState:

input On, Off, Resume, Set;
input QuickAccel, QuickDecel;
constant SpeedMin = 30.0f : float;
constant SpeedMax = 150.0f : float;
sensor Accel: float;
sensor Brake: float;
sensor Speed: float;

output CruiseSpeed: float;
output ThrottleCmd: float;
output CruiseState: integer;

function regulateThrottle(boolean, float, float) : float;

var
	state: integer,        % 0=OFF, 1=ON, 2=STANDBY, 3=DISABLE
	cruiseSpeed: float,
	throttleOut: float,
	temp: boolean
in
	state := 0;
	cruiseSpeed := 0.0f;
	throttleOut := 0.0f;
	temp := false;
	loop
	% OFF state
	if state = 0 then
		present On then
			if ?Accel < 3.0f and ?Speed >= SpeedMin and ?Speed <= SpeedMax then
				cruiseSpeed := ?Speed;
				state := 1;
				%emit CruiseState(1);
			end if;
		end present;
		throttleOut := ?Accel;
	end if;

	% ON state
	if state = 1 then
		present Off then
			state := 0;
			%emit CruiseState(0);
		end present;
		if ?Brake >= 3.0f then
			state := 2;
			%emit CruiseState(2);
		elsif ?Accel >= 3.0f then
			state := 3;
			%emit CruiseState(3);
		end if;

		present QuickAccel then
			temp := true;
			throttleOut := regulateThrottle(temp, cruiseSpeed + 1.0f, ?Speed);
			emit ThrottleCmd(throttleOut);
			cruiseSpeed := cruiseSpeed + 1.0f;
		end present;

		present QuickDecel then
			temp := true;
			throttleOut := regulateThrottle(temp, cruiseSpeed - 1.0f, ?Speed);
			emit ThrottleCmd(throttleOut);
			cruiseSpeed := cruiseSpeed - 1.0f;
		end present;
	end if;

	% STANDBY state
	if state = 2 then
		if ?Accel >= 3.0f or ?Speed <= SpeedMin or ?Speed >= SpeedMax then
			state := 3;
			%emit CruiseState(3);
		elsif ?Accel < 3.0f and ?Speed >= SpeedMin and ?Speed <= SpeedMax then
			state := 1;
			%emit CruiseState(1);
		end if;
		throttleOut := ?Accel;
	end if;

	% DISABLE state
	if state = 3 then
		present Off then
			state := 0;
			%emit CruiseState(0);
		end present;
		present Resume then
			state := 1;
			%emit CruiseState(1);
		end present;
		present Set then
			state := 1;
			cruiseSpeed := ?Speed;
			%emit CruiseState(1);
		end present;
		if ?Accel < 3.0f and ?Speed >= SpeedMin and ?Speed <= SpeedMax then
			state := 1;
			%emit CruiseState(1);
		end if;
		throttleOut := ?Accel;
	end if;
	emit CruiseState(state);
	emit ThrottleCmd(throttleOut);
	emit CruiseSpeed(cruiseSpeed);

	pause;
	end loop
end var

end module
